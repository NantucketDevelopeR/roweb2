/*  Code stuff */
@import url(https://unpkg.com/firacode/distr/fira_code.css);

code {
    background: #f3f7ff;
}

code, pre {
    font-family: "Fira Code";
    font-size: .8rem;
}
pre {
    border-radius: 5px;
    padding: 0.6rem;
    margin-bottom: 20px;
    overflow-x: auto;
    background: #2b2b2b;
    background-color: #2b2b2b;
    & code {
        background-color: #2b2b2b;
        color: #f8f8f2; 
    }
}

h2 code {
    display: inline-block;
    font-size: 2rem;
    line-height: 1em;
    font-weight: 500;
}

h3 code {
    display: inline-block;
    font-size: 2rem;
    line-height: 1em;
    font-weight: 500;
}

/* Background */ .chroma { color: #f8f8f2; background-color: #2b2b2b }
/* Error */ .chroma .err { color: #960050; background-color: #2b2b2b }
/* LineTableTD */ .chroma .lntd { vertical-align: top; padding: 0; margin: 0; border: 0; }
/* LineTable */ .chroma .lntable { border-spacing: 0; padding: 0; margin: 0; border: 0; width: auto; overflow: auto; display: block; }
/* LineHighlight */ .chroma .hl { display: block; width: 100%;background-color: #ffffcc }
/* LineNumbersTable */ .chroma .lnt { margin-right: 0.4em; padding: 0 0.4em 0 0.4em;color: #7f7f7f }
/* LineNumbers */ .chroma .ln { margin-right: 0.4em; padding: 0 0.4em 0 0.4em;color: #7f7f7f }
/* Keyword */ .chroma .k { color: #00e0e0 }
/* KeywordConstant */ .chroma .kc { color: #00e0e0 }
/* KeywordDeclaration */ .chroma .kd { color: #00e0e0 }
/* KeywordNamespace */ .chroma .kn { color: #ffa07a }
/* KeywordPseudo */ .chroma .kp { color: #00e0e0 }
/* KeywordReserved */ .chroma .kr { color: #00e0e0 }
/* KeywordType */ .chroma .kt { color: #00e0e0 }
/* NameAttribute */ .chroma .na { color: #a6e22e }
/* NameClass */ .chroma .nc { color: #a6e22e }
/* NameConstant */ .chroma .no { color: #00e0e0 }
/* NameDecorator */ .chroma .nd { color: #a6e22e }
/* NameException */ .chroma .ne { color: #a6e22e }
/* NameFunction */ .chroma .nf { color: #f8f8f2 }
/* NameOther */ .chroma .nx { color: #a6e22e }
/* NameTag */ .chroma .nt { color: #ffa07a }
/* Literal */ .chroma .l { color: #dcc6e0 }
/* LiteralDate */ .chroma .ld { color: #abe338 }
/* LiteralString */ .chroma .s { color: #ffd700 }
/* LiteralStringAffix */ .chroma .sa { color: #abe338 }
/* LiteralStringBacktick */ .chroma .sb { color: #abe338 }
/* LiteralStringChar */ .chroma .sc { color: #abe338 }
/* LiteralStringDelimiter */ .chroma .dl { color: #abe338 }
/* LiteralStringDoc */ .chroma .sd { color: #abe338 }
/* LiteralStringDouble */ .chroma .s2 { color: #abe338 }
/* LiteralStringEscape */ .chroma .se { color: #ae81ff }
/* LiteralStringHeredoc */ .chroma .sh { color: #abe338 }
/* LiteralStringInterpol */ .chroma .si { color: #abe338 }
/* LiteralStringOther */ .chroma .sx { color: #abe338 }
/* LiteralStringRegex */ .chroma .sr { color: #abe338 }
/* LiteralStringSingle */ .chroma .s1 { color: #abe338 }
/* LiteralStringSymbol */ .chroma .ss { color: #abe338 }
/* LiteralNumber */ .chroma .m { color: #f5ab35 }
/* LiteralNumberBin */ .chroma .mb { color: #f5ab35 }
/* LiteralNumberFloat */ .chroma .mf { color: #f5ab35 }
/* LiteralNumberHex */ .chroma .mh { color: #f5ab35 }
/* LiteralNumberInteger */ .chroma .mi { color: #f5ab35 }
/* LiteralNumberIntegerLong */ .chroma .il { color: #f5ab35 }
/* LiteralNumberOct */ .chroma .mo { color: #f5ab35 }
/* Operator */ .chroma .o { color: #f8f8f2 }
/* OperatorWord */ .chroma .ow { color: #f8f8f2 }
/* Comment */ .chroma .c { color: #d4d0ab }
/* CommentHashbang */ .chroma .ch { color: #d4d0ab }
/* CommentMultiline */ .chroma .cm { color: #d4d0ab }
/* CommentSingle */ .chroma .c1 { color: #d4d0ab }
/* CommentSpecial */ .chroma .cs { color: #d4d0ab }
/* CommentPreproc */ .chroma .cp { color: #d4d0ab }
/* CommentPreprocFile */ .chroma .cpf { color: #d4d0ab }
/* GenericDeleted */ .chroma .gd { color: #ffa07a }
/* GenericEmph */ .chroma .ge { font-style: italic }
/* GenericInserted */ .chroma .gi { color: #a6e22e }
/* GenericStrong */ .chroma .gs { font-weight: bold }
/* GenericSubheading */ .chroma .gu { color: #d4d0ab }
